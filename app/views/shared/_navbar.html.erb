<header class="header_area">
  <div class="main_menu">

          <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
          <%= link_to root_path, class: "navbar-brand" do %>
            <i class="fab fa-galactic-republic"></i>
          <% end %>


            <%= form_tag services_path, method: :get, class: "form-inline" do %>
              <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Busque serviços" %>
              <%= hidden_field_tag :query, params[:query], class: "form-control", placeholder: "Category" %>
              <%= submit_tag "Procurar", class: "btn btn-white btn-just-icon btn-round" %>
            <% end %>



            <div class="collapse navbar-collapse offset" id="navbarSupportedContent">
              <ul class="nav navbar-nav menu_nav ml-auto mr-auto">
                <ul class="navbar-nav mr-auto">
                  <li id="messages-button" class="nav-item">
                    <%= link_to "Home", root_path, class: "nav-link" %>
                  </li>
                  <li class="nav-item submenu dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                        aria-expanded="false">Categorias</a>
                    <ul class="dropdown-menu">
                      <% Category.all.each do |category| %>
                        <%= link_to category.name, services_path(category: category), class: "dropdown-item" %>
                      <% end %>
                    </ul>
                  </li>
                  <% if user_signed_in? %>
                    <li class="nav-item dropdown">
                      <% if current_user.profile_photo.attached?  %>
                        <%= cl_image_tag current_user.profile_photo.key, height: 40, width: 40, crop: :fill, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false  %>
                      <% else %>
                        <%= cl_image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", crop: :fill, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                      <% end %>
                      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                        <%= link_to "Minha conta", user_show_path(slug: current_user.username), class: "dropdown-item" %>
                        <%= link_to "Meus serviços", services_myservices_path, class: "dropdown-item" %>
                        <%= link_to "Minhas compras", orders_myorders_path, class: "dropdown-item" %>
                        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
                      </div>
                    </li>
                  <% else %>
                    <li class="nav-item">
                      <%= link_to "Login", new_user_session_path, class: "nav-link" %>
                    </li>
                  <% end %>
                </ul>
              </ul>
          </div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

  </div>
</header>

