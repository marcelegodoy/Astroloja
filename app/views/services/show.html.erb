<div class="product_image_area">

    <div id="product-container" class="container">

        <div class="row s_product_inner">
          <div class="col-lg-6">
            <div class="single-prd-item">
              <% if @service.photo.attached? %>
                <%= cl_image_tag @service.photo.key, height: 600, width: 600, crop: :fill %>
              <% else %>
                <%= cl_image_tag "https://i.picsum.photos/id/1042/400/400.jpg", height: 600, width: 600, crop: :fill %>
              <% end %>
            </div>
          </div>
          <div class="col-lg-5">
            <div class="s_product_text">
              <h3><%= @service.name %></h3>
              <h2>R$ <%= @service.price %></h2>
              <ul class="list">
                <li><p>Category : <%= link_to @service.category.name, services_path(category: @service.category) %></p></li>
              </ul>
              <p><%= @service.description %></p>
                <%= link_to 'Buy', new_service_order_path(@service), class:"btn btn-secondary btn-lg" %>
            </div>
            <div class="card_area d-flex align-items-center">
              <h4 class="card-trip-pricing">
                <% if current_user.profile_photo.attached?  %>
                  <div class="d-flex justify-content-center mt-5">
                    <%= cl_image_tag current_user.profile_photo.key, height: 100, width: 100, crop: :fill, class: 'rounded-circle mx-auto' %>
                  </div>
                <% else %>
                    <%= cl_image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", height: 100, width: 100, crop: :fill, class: 'rounded-circle mx-auto' %>
                <% end %>
                <%= link_to @service.user.name, user_show_path(slug: current_user) %>
              <p class="text-center"><%= @service.city %> - <%= @service.state.name %></p>
            </div>
            </div>
          </div>

          <% if policy(@service).edit? %>
            <p><%= link_to 'Edit this service', edit_service_path(@service) %></p>
            <p><%= link_to 'Remove this service', service_path, method: :delete %></p>
          <% end %>
          <p><%= link_to '↩️ Back to shop', services_path %></p>
        </div>
      </div>

  </div>
